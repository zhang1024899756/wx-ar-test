<!--index.wxml-->
<view>
    <!--WebGL层-->
    <canvas 
      type="webgl" 
      id="webgl" 
      canvas-id="webgl" 
      style="position:fixed;top:0;width:100%;height:100%;z-index:1;"
      bindtouchstart="touchStart" 
      bindtouchmove="touchMove" 
      bindtouchend="touchEnd">
    </canvas>
    <!--摄像头层-->
    <camera 
      mode="normal" 
      device-position="back" 
      flash="auto" 
      frame-size="medium"
      style="position:fixed;top:0;width:100%;height:100%;z-index:0;">
    </camera>
  </view>
